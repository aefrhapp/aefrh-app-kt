<resources>

    <!--********************************** APP THEMES **********************************-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Makes the toolbar text whatever color you want for both light/dark-->
        <item name="android:background">@color/backgroundToolbar</item>
    </style>
    <!--********************************** APP THEMES **********************************-->

    <!--********************************** FONTS **********************************-->
    <style name="Text_Base">
        <item name="android:textColorLink">@color/colorTextLink</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text_Bold" parent="@style/Text_Base">
        <item name="android:fontFamily">@font/font_black</item>
    </style>

    <style name="Text_Regular" parent="@style/Text_Base">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="Text_Light" parent="@style/Text_Base">
        <item name="android:fontFamily">@font/font_light</item>
    </style>

    <style name="Text_Italic" parent="@style/Text_Base">
        <item name="android:fontFamily">@font/font_italic</item>
    </style>
    <!--********************************** FONTS **********************************-->

    <!--********************************** TEXT VIEWS **********************************-->
    <style name="TextBody" parent="@style/Text_Regular" />
    <style name="TextBodyBold" parent="@style/Text_Bold" />
    <style name="TextBodyLight" parent="@style/Text_Light" />
    <style name="TextBodyItalic" parent="@style/Text_Italic" />
    <style name="TextBodyLink" parent="@style/Text_Regular" />

    <style name="TextTitle" parent="@style/TextBodyBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="TextSubtitle" parent="@style/TextBodyItalic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextDescription" parent="@style/TextBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextHeaderNavigation" parent="@style/TextBodyItalic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorNavigationText</item>
    </style>

    <style name="TextNavigation" parent="@style/TextDescription">
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/colorNavigationText</item>
    </style>

    <style name="TextMapTitle" parent="@style/Text_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextMapSubTitle" parent="@style/Text_Italic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextMultimedia" parent="@style/TextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <!--********************************** TEXT VIEWS **********************************-->

    <!--********************************** BUTTONS **********************************-->
    <style name="ButtonContact" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/container_button_contact</item>
        <item name="android:paddingStart">@dimen/size_24</item>
        <item name="android:paddingEnd">@dimen/size_24</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--********************************** BUTTONS **********************************-->

    <!--********************************** CONTAINERS **********************************-->
    <style name="EpocaContainer" parent="@style/CardView.Light">
        <item name="cardBackgroundColor">@color/backgroundCard</item>
        <item name="cardCornerRadius">@dimen/size_8</item>
    </style>

    <style name="FiestaContainer" parent="@style/CardView.Light">
        <item name="cardBackgroundColor">@color/backgroundCard</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginEnd">@dimen/size_16</item>
        <item name="cardCornerRadius">@dimen/size_8</item>
    </style>
    <!--********************************** CONTAINERS **********************************-->

    <!--********************************** IMAGES **********************************-->
    <style name="LogoImage">
        <item name="android:layout_width">@dimen/size_56</item>
        <item name="android:layout_height">@dimen/size_56</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">H,16:9</item>
    </style>

    <style name="ImageRsSquare">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="tint">@color/colorMainText</item>
    </style>

    <style name="ImageRsRectangle">
        <item name="android:layout_width">@dimen/size_84</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="tint">@color/colorMainText</item>
    </style>

    <style name="ImageMultimedia">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/size_32</item>
    </style>

    <style name="ImagePlay">
        <item name="android:layout_width">@dimen/size_62</item>
        <item name="android:layout_height">@dimen/size_62</item>
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:tint">@android:color/white</item>
    </style>
    <!--********************************** IMAGES **********************************-->

</resources>